# Application Environment
APP_ENV=development

# Database Configuration
POSTGRES_DSN=postgresql+psycopg://user:password@localhost:5432/factcheck

# Storage Paths
INGEST_BUCKET_PATH=./data/uploads
PROCESSED_TEXT_PATH=./data/processed
VECTORSTORE_PATH=./vectorstore

# Queue Configuration
QUEUE_BACKEND=sync  # "sync" or "arq"
REDIS_DSN=redis://localhost:6379/0

# Claim Extraction
CLAIM_EXTRACTOR=simple  # "simple" or "llm"

# OpenAI Configuration (required for LLM extractor and verification)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Documentation Base URL (optional)
DOCS_BASE_URL=https://example.org/docs

# Free Mode (for development/testing - no API costs!)
FREE_MODE=true  # Set to true to use free local models instead of OpenAI API

# Gemini API (Free tier available - recommended for class projects!)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # Fast and free tier friendly

# Verification Provider
VERIFICATION_PROVIDER=gemini  # "gemini" (free) | "openai" | "free" (mock)
